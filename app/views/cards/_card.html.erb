<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="card">
        <div class="card-image">
          <% if FileTest.exist?(Rails.root.join('app/assets/images', "#{@card.id}.jpg")) %>
          <img class="img-responsive center-block" src="<%= image_url("#{@card.id}.jpg") %>">
          <% end %>

        </div><!-- card image -->

        <div class="card-content">
          <span class="card-title"><%= @card.title %></span>
          <button type="button" id="show" class="btn btn-custom pull-right" aria-label="Left Align">
            <i class="fa fa-info"></i>
          </button>
          <hr>
          <div class="card-description"><%= @card.description %></div>
        </div><!-- card content -->
        <div class="card-action">
          <a href="#" target="#"><span class="label label-info">era</span></a>
        </div><!-- card actions -->
        <div class="card-reveal">
          <span class="card-title"><%= @card.title %></span> <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
          <p><%= @card.description %></p>
        </div><!-- card reveal -->
      </div>
    </div>
  </div>
</div>