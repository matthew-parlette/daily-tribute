<!DOCTYPE html>
<html>
  <head>
    <title>DailyTribute</title>
    <%= csrf_meta_tags %>

    <!--Import Google Icon Font-->
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <div class="nav-wrapper">
        <a href="#!" class="brand-logo">Logo</a>
        <ul class="right hide-on-med-and-down">
          <li><a href="<%= new_card_path %>"><i class="material-icons left">library_add</i></a></li>
          <li>
            <%= link_to('Login / Sign-up', new_user_session_path, class: 'waves-effect waves-light btn')  %>
            <%= link_to('Logout', destroy_user_session_path, class: 'waves-effect waves-light btn')  %>
          </li>
        </ul>
      </div>
    </nav>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
