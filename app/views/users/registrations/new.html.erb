
<h5 class="center-align">Sign up</h5>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="input-field col s12">
    <%= f.label :name, 'First Name' %>
    <%= f.text_field :name, class: 'validate', autofocus: true %>
  </div>

  <div class="input-field col s12">
    <%= f.label :email, class: 'validate' %>
    <%= f.email_field :email %>
  </div>

  <% if @minimum_password_length %>
  <div class="card-panel red lighten-4 hoverable">
    Passwords must be at least <%= @minimum_password_length %> characters long
  </div>
  <% end %>

  <div class="input-field col s12">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: 'off', class: 'validate' %>
  </div>

  <div class="input-field col s12">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'validate' %>
  </div>

  <div class="actions">
    <%= f.submit 'Sign up', class: 'btn waves-effect waves-light' %>
  </div>
<% end %>

<%= render 'users/shared/links' %>
