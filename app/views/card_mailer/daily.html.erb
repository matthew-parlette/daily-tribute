<div class="row">
  <div class="col s12 m6">
    <div class="card horizontal small blue-grey darken-1">
      <div class="card-image">
        <%= image_tag attachments["#{Time.zone.today.year}-#{Time.zone.today.month}-#{Time.zone.today.day}.jpg"].url %>
      </div>
      <div class="card-content white-text">
        <span class="card-title"><%= @card.title %></span>
        <p><%= @card.description %></p>
      </div>
    </div>
  </div>
</div>